    <UserControl x:Class="ChemProV.PFD.EquationEditor.Equation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Name="EquationUserControl">

    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel Name="stackPanel" Orientation="Horizontal">
            <Ellipse Height="10" Margin="2,0" Name="ellipse1" Stroke="Black" StrokeThickness="1" Width="10" />
            <TextBox FontSize="11" Name="EquationTextBox" AcceptsReturn="False" MinWidth="200" MaxWidth="270"  TextWrapping="Wrap"/>
            <TextBox Height="25" Visibility="Collapsed" FontSize="11" IsReadOnly="True" Name="EquationFeedback" AcceptsReturn="False" MinWidth="10" />
        </StackPanel>
    </Grid>
</UserControl>
