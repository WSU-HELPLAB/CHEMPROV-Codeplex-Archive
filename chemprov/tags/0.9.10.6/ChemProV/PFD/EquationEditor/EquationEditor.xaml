<UserControl x:Class="ChemProV.PFD.EquationEditor.EquationEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <ScrollViewer>
        <StackPanel>
        	<sdk:Label Background="Silver" Content="Equations" Padding="6" FontSize="14" HorizontalContentAlignment="Center" />
            <StackPanel Height="Auto" Margin="0,5,0,0" Name="OperationStackPanel" Width="Auto" Orientation="Horizontal"></StackPanel>
            <StackPanel Height="Auto" HorizontalAlignment="Left" Margin="0,5,0,0" Name="EquationStackPanel" VerticalAlignment="Top" Width="Auto"></StackPanel>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
